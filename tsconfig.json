{
  "compilerOptions": {
    "lib": [ "ESNext" ],
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "..",
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [ "./src/**/*", "../shared/**/*", "../server/src/**/*", "../web/src/**/*" ],
  "exclude": [ "**/node_modules/" ],
  "ts-node": { "swc": true }
}
